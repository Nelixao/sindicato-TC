{% extends 'base.html.twig' %}

{% block title %}Sindicato TS{% endblock %}

{% block body %}
    <body class="index">
        <div class="container-fluid mt-4">
            <div class="row py-3">
                <div class="col-5 text-start">
                    <a href="{{ path('indexapp') }}" class="btn text-white text-decoration-none fw-bold">INICIO</a>
                </div>
                <div class="col-7 text-end">
                    <a href="{{ path('indexapp') }}" class="btn text-white text-decoration-none fw-bold">
                        <img src="{{ asset('images/iconow.png') }}" alt="Logo" class="btn img-fluid" style="max-width: 80px;">
                    </a>
                </div>
            </div>
            <div class="list-group-item list-group-item-success text-center">
                {% for flashMessage in app.session.flashbag.get('notice') %}
                    <div>
                        {{ flashMessage }}
                    </div>
                {% endfor %}
            </div>
            <div class="row align-items-center justify-content-center text-center mx-0">
                <div class="col-md-12 col-lg-5 text-center p-2">
                    <div class="row justify-content-center">
                        <img src="{{ asset('images/logo.png') }}" alt="Logo principal" class="img-fluid mb-3" style="max-width: 300px;">
                    </div>
                    <div class="row justify-content-center">
                        <img src="{{ asset('images/principalLetras.png') }}" alt="Texto principal" class="img-fluid w-100 mb-4" style="max-width: 500px;">
                    </div>
                    <div class="row">
                        <div class="col">
                            <a href="{{ path('forms') }}" class="btn text-dark px-3 py-2">
                                Â¡SOLICITAR!
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 col-lg-7 text-center p-3"> 
                    <img src="{{ asset('images/principalFoto.png') }}" alt="Foto de familia" class="img-fluid" style="max-width: 780px;">
                </div>
            </div>
        </div>
    </body>
{% endblock %}
